{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Extension",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}"
      ],
      "outFiles": [
        "${workspaceFolder}/dist/extension.js"
      ],
      "preLaunchTask": "npm: watch",
      "sourceMaps": true,
      "resolveSourceMapLocations": [
        "${workspaceFolder}/dist/*.js"
      ],
      "env": {
        "NODE_ENV": "development"
      }
    }
  ]
} 